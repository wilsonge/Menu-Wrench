<?xml version="1.0" encoding="utf-8"?>
<install type="module"
         version="2.5"
         method="upgrade">
	<name>Menu Wrench</name>
	<creationDate>August 7, 2013</creationDate>
	<author>Matt Thomas</author>
	<authorUrl>http://betweenbrain.com</authorUrl>
	<copyright>Copyright (C) 2013 betweenbrain llc. All rights reserved.</copyright>
	<license>GNU General Public License version 3, or later.</license>
	<version>0.2</version>
	<description>MOD_MENU_WRENCH_DESC</description>

	<files>
		<filename module="mod_menuwrench">mod_menuwrench.php</filename>
		<filename>helper.php</filename>
		<folder>elements</folder>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_menuwrench.ini</language>
	</languages>

	<params addpath="/modules/mod_menuwrench/elements">
		<param name="renderedItems"
		       type="menuitems"
		       label="MOD_MENU_WRENCH_RENDERED_ITEMS_LABEL"
		       description="MOD_MENU_WRENCH_RENDERED_ITEMS_DESC"/>

		<param name="renderDepth"
		       type="list"
		       default="10"
		       label="MOD_MENU_WRENCH_RENDER_DEPTH_LABEL"
		       description="MOD_MENU_WRENCH_RENDER_DEPTH_DESC">
			<option value="0">0</option>
			<option value="1">J1</option>
			<option value="2">J2</option>
			<option value="3">J3</option>
			<option value="4">J4</option>
			<option value="5">J5</option>
			<option value="6">J6</option>
			<option value="7">J7</option>
			<option value="8">J8</option>
			<option value="9">J9</option>
			<option value="10">J10</option>
		</param>

		<param name="submenuSplits"
		       type="list"
		       default="3"
		       label="MOD_MENU_WRENCH_SUBMENU_SPLITS_LABEL"
		       description="MOD_MENU_WRENCH_SUBMENU_SPLITS_DESC">
			<option value="0">J0</option>
			<option value="1">J1</option>
			<option value="2">J2</option>
			<option value="3">J3</option>
			<option value="4">J4</option>
			<option value="5">J5</option>
			<option value="6">J6</option>
			<option value="7">J7</option>
			<option value="8">J8</option>
			<option value="9">J9</option>
			<option value="10">J10</option>
		</param>

		<field name="hiddenItems"
		       type="menuitem"
		       multiple="true"
		       size="25"
		       label="MOD_MENU_WRENCH_HIDDEN_ITEMS_LABEL"
		       description="MOD_MENU_WRENCH_HIDDEN_ITEMS_DESC"/>

		<param name="moduleclass_sfx"
		       type="text"
		       default=""
		       label="Module Class Suffix"
		       description="PARAMMODULECLASSSUFFIX"/>
	</params>
</install>